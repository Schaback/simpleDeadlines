<?xml version="1.0" encoding="UTF-8"?>
<resources>
  <color name="simple_background">#000000</color>
  <color name="simple_foreground">#303030</color>
  <color name="simple_remaining_bg">#2B2B2B</color>
  <color name="simple_title">#FFFFFF</color>

  <color name="simple_lvl_today">#CC0000</color>
  <color name="simple_lvl_urgent">#FF8800</color>
  <color name="simple_lvl_worrying">#CCCC00</color>
  <color name="simple_lvl_nice">#00CC00</color>
  <color name="simple_lvl_other">#0000CC</color>

  <color name="simple_background_light">#303030</color>
  <color name="simple_foreground_light">#C8C8C8</color>

  <style name="SimpleTheme.Panel">
    <item name="android:background">@color/simple_background</item>
  </style>
  <style name="SimpleTheme.ListView">
    <item name="android:divider">@color/simple_background</item>
    <item name="android:dividerHeight">2dp</item>
  </style>
  <style name="SimpleTheme.ListView.Item">
    <item name="android:background">@drawable/list_selector_background</item>
  </style>

  <style name="SimpleTheme.Drawer.Panel">
    <item name="android:background">@color/simple_background_light</item>
  </style>
  <style name="SimpleTheme.Drawer.Title">
    <item name="android:padding">10dp</item>
    <item name="android:textSize">22sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/simple_title</item>
  </style>
  <style name="SimpleTheme.Drawer.GroupLabel">
    <item name="android:padding">8dp</item>
    <item name="android:textSize">18sp</item>
  </style>
  <style name="SimpleTheme.Drawer.ActionTextView">
    <item name="android:clickable">true</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:padding">8dp</item>
    <item name="android:background">@color/simple_foreground_light</item>
    <item name="android:textColor">@color/simple_background_light</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="SimpleTheme.Drawer.ListView">
    <item name="android:divider">@color/simple_background_light</item>
    <item name="android:dividerHeight">2dp</item>
  </style>
  <style name="SimpleTheme.Drawer.ListView.Item">
    <item name="android:background">@drawable/list_selector_background</item>
  </style>
</resources>